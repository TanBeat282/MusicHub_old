<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottomsheet"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/layout_artist"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Nghệ sĩ"
            android:textColor="@color/colorSecondaryText1"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageAlbumArt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/txt_name_artist"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@color/white"
            app:riv_corner_radius="50dp" />

        <TextView
            android:id="@+id/txt_name_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="Trần Ngọc Tân"
            android:textColor="@color/colorSecondaryText1"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

